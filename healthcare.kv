<MainMenuScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Add Patient"
            on_release: app.root.current = 'add_patient'
        Button:
            text: "View Patients"
            on_release: app.root.current = 'view_patients'
        Button:
            text: "Add Appointment"
            on_release: app.root.current = 'add_appointment'
        Button:
            text: "View Appointments"
            on_release: app.root.current = 'view_appointments'
        Button:
            text: "Add Billing Record"
            on_release: app.root.current = 'add_billing'
        Button:
            text: "View Billing Records"
            on_release: app.root.current = 'view_billing'
        Button:
            text: "Analytics"
            on_release: app.root.current = 'analytics'
        Button:
            text: "Exit"
            on_release: app.stop()

<AddPatientScreen>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: patient_name
            hint_text: "Enter patient name"
        TextInput:
            id: patient_age
            hint_text: "Enter age"
        TextInput:
            id: patient_gender
            hint_text: "Enter gender"
        TextInput:
            id: medical_history
            hint_text: "Enter medical history"
        TextInput:
            id: allergies
            hint_text: "Enter allergies"
        TextInput:
            id: medications
            hint_text: "Enter medications"
        Button:
            text: "Add Patient"
            on_release: root.add_patient()
        Label:
            id: message_label
            text: ""

<ViewPatientsScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: patient_list
            text: ""
        Button:
            text: "Back to Menu"
            on_release: app.root.current = 'menu'

<AddAppointmentScreen>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: appointment_patient_name
            hint_text: "Enter patient name"
        TextInput:
            id: doctor_name
            hint_text: "Enter doctor name"
        TextInput:
            id: appointment_date
            hint_text: "Enter appointment date (YYYY-MM-DD)"
        TextInput:
            id: appointment_time
            hint_text: "Enter appointment time (HH:MM)"
        Button:
            text: "Add Appointment"
            on_release: root.add_appointment()
        Label:
            id: appointment_message_label
            text: ""

<ViewAppointmentsScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: appointment_list
            text: ""
        Button:
            text: "Back to Menu"
            on_release: app.root.current = 'menu'

<AddBillingScreen>:
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: billing_patient_name
            hint_text: "Enter patient name"
        TextInput:
            id: billing_amount
            hint_text: "Enter billing amount"
        TextInput:
            id: insurance_claimed
            hint_text: "Is insurance claimed? (yes/no)"
        TextInput:
            id: paid_status
            hint_text: "Has the bill been paid? (yes/no)"
        Button:
            text: "Add Billing Record"
            on_release: root.add_billing()
        Label:
            id: billing_message_label
            text: ""

<ViewBillingScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: billing_list
            text: ""
        Button:
            text: "Back to Menu"
            on_release: app.root.current = 'menu'

<AnalyticsScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Display Analytics"
            on_release: root.display_analytics()
        Label:
            id: analytics_label
            text: ""
        Button:
            text: "Back to Menu"
            on_release: app.root.current = 'menu'
